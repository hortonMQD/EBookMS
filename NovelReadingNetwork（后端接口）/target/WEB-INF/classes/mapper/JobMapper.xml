<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//com.mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 将namespace的值设置为DAO类对应的路径 -->
<mapper namespace="com.dao.JobDao">

    <!--使用自定义结果集类型-->
    <resultMap id="jobList" type="com.pojo.Job">
        <id property="id" column="id" />
        <result property="name" column="name"/>
        <result property="remark" column="remark"/>
    </resultMap>


    <select id="SelectJob" resultMap="jobList" parameterType="com.pojo.Job">
        SELECT id,name,remark FROM job_inf
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>


    <update id="UpdateJob" parameterType="com.pojo.Job">
        update job_inf
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="remark != null and remark != ''">remark = #{remark}</if>
        </set>
        where id = #{id};
    </update>


    <insert id="InsertJob" parameterType="com.pojo.Job" keyProperty="id">
        insert into job_inf (name,remark) values(#{name},#{remark});
    </insert>

    <delete id="DeleteJob"  parameterType="com.pojo.Job">
        delete from job_inf where id = #{ID};
    </delete>



</mapper>